<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">
    <ImageView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />
    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="username"
        android:padding="20dp"
        android:textColor="@color/mypurpole"
        android:textColorHint="@color/mypurpole"

        />

    <EditText
        android:id="@+id/eemail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="email or phone numbere"
        android:padding="20dp"
        android:textColor="@color/mypurpole"
        android:textColorHint="@color/mypurpole"
        android:inputType="textEmailAddress"

        />

    <EditText
        android:id="@+id/passwordd"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eemail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/mypurpole"
        android:textColorHint="@color/mypurpole"

        />

    <Button
        android:id="@+id/loginbtn2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordd"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/mypurpole"
        android:padding="20dp"
        android:text="sign up " />
















    <TextView
        android:id="@+id/or2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbtn2"
        android:layout_marginTop="2dp"
        android:text="or sign with "
        android:textColor="@color/purple_200"
        android:textSize="20dp"

        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/social2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or2"
        android:layout_marginTop="-17dp"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/fac" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/gog" />

    </LinearLayout>

    <TextView
        android:id="@+id/sg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/social2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="14dp"
        android:text="you have an account ?"
        android:textColor="@color/mypurpole" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sgin1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/social2"
        android:layout_alignLeft="@id/sg2"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/white"
        android:text="sign in"
        android:textColor="@color/purple_200" />




</RelativeLayout>
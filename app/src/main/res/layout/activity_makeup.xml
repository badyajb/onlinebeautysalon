<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makeup">

    <EditText
        android:id="@+id/search"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:padding="18dp"
        android:text="search your makeup style"
        android:textColor="@color/purpledark"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="300dp"
        >
        <ImageButton
            android:id="@+id/vf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ector"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/cal1"
            android:layout_width="30dp"
            android:layout_height="30dp"
                android:src="@drawable/calvec"
            android:layout_marginLeft="10dp"
            android:background="@color/white"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/search"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mypurpole"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/nl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/mypurpole"
            android:src="@drawable/frame"
            />

        <ImageButton
            android:id="@+id/hair1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mypurpole"
            android:paddingLeft="90dp"
            android:src="@drawable/hairnormal" />

        <ImageButton
            android:id="@+id/mk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:background="@color/mypurpole"
            android:src="@drawable/makeupdr" />
    </LinearLayout>

  </RelativeLayout>